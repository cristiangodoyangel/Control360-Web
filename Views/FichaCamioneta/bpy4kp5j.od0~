    .titulo-seccion {
        background-color: #f06529;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        font-weight: bold;
    }

    .table-bordered th, .table-bordered td {
        border: 0.5px solid #ccc !important;
        text-align: center;
        vertical-align: middle;
        font-size: 14px;
        padding: 6px;
    }

    .grafico-camionetas {
        max-width: 600px;
        height: 400px;
        width: 100% !important;
        display: block;
        background-color: white;
        padding: 10px;
    }
</style>
