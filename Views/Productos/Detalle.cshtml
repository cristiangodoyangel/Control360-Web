@model Inventario360.Web.Models.Producto

@{
    ViewBag.Title = "Detalles del Producto";
}

<h2 class="mt-4">Detalles del Producto</h2>

<div class="card shadow-lg p-4 mt-3">
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Nombre Técnico</dt>
                <dd class="col-sm-8">@Model.NombreTecnico</dd>

                <dt class="col-sm-4">Descripción</dt>
                <dd class="col-sm-8">@Model.Descripcion</dd>

                <dt class="col-sm-4">Categoría</dt>
                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Categoria) ? Model.Categoria : "Sin categoría")</dd>

                <dt class="col-sm-4">Proveedor</dt>
                <dd class="col-sm-8">@Model.NombreProveedor</dd>

                <dt class="col-sm-4">Marca</dt>
                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Marca) ? Model.Marca : "Sin marca")</dd>

                <dt class="col-sm-4">Medida</dt>
                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Medida) ? Model.Medida : "Sin medida")</dd>

                <dt class="col-sm-4">Unidad de Medida</dt>
                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.UnidadMedida) ? Model.UnidadMedida : "Sin unidad")</dd>

                <dt class="col-sm-4">Ubicación</dt>
                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Ubicacion) ? Model.Ubicacion : "Sin ubicación")</dd>

                <dt class="col-sm-4">Estado</dt>
                <dd class="col-sm-8">@(!string.IsNullOrEmpty(Model.Estado) ? Model.Estado : "Sin estado")</dd>

                <dt class="col-sm-4">Cantidad</dt>
                <dd class="col-sm-8">@Model.Cantidad</dd>
            </dl>
        </div>

        <div class="col-md-6 text-center">
            @if (!string.IsNullOrEmpty(Model.Imagen))
            {
                <img src="@Url.Content("~/images/" + Model.Imagen)" class="img-fluid rounded" alt="Imagen del Producto" style="max-height: 300px;" />
            }
            else
            {
                <p><em>Sin imagen disponible</em></p>
            }
        </div>
    </div>

    <div class="mt-4">
        @Html.ActionLink("  ← Volver al Inventario", "Index", null, new { @class = "btn btn-secondary" })
        @Html.ActionLink("Editar", "Editar", new { id = Model.ITEM }, new { @class = "btn btn-orange" })
      
    </div>
</div>
