@model Inventario360.Web.Models.Producto


@{
    ViewBag.Title = "Detalle del Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-3 text-primary">Detalle del Producto</h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <div class="row">
                <!-- Imagen del producto -->
                <div class="col-md-4 text-center">
                    <img src="@Url.Content("~/images/" + Model.Imagen)" alt="Imagen de @Model.NombreTecnico" class="img-fluid rounded shadow-sm" width="200" />
                </div>
                <!-- Datos del producto -->
                <div class="col-md-8">
                    <h3 class="card-title text-dark">@Model.NombreTecnico</h3>
                    <table class="table table-bordered mt-3">
                        <tbody>
                            <tr>
                                <th class="bg-light">Marca</th>
                                <td>@Model.Marca</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Descripción</th>
                                <td>@Model.Descripcion</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Stock</th>
                                <td class="fw-bold">@Model.Cantidad @Model.UnidadMedida</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Ubicación</th>
                                <td>@Model.Ubicacion</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Proveedor</th>
                                <td>@ViewBag.NombreProveedor</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Categoría</th>
                                <td>@Model.Categoria</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Botón de regreso -->
    <div class="mt-4 text-end">
        @Html.ActionLink("Volver al inventario", "Index", "Productos", null, new { @class = "btn btn-secondary btn-lg" })
    </div>
</div>

<style>
    .table-responsive {
        overflow-x: auto;
    }

    .pagination-separated .paginate_button {
        margin: 0 8px;
    }

    .table-hover tbody tr:hover {
        background-color: #fcd8b7;
    }

    .fila-hover:hover {
        background-color: #fbdfc5;
    }

    .mb-4 {
        margin-bottom: 3rem !important;
    }

    .table-light th {
        background-color: #f8f9fa;
        font-weight: bold;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
    }

    .dataTables_wrapper .dataTables_filter {
        margin-bottom: 15px;
    }

    .table-bordered {
        border: 1px solid #333 !important;
    }

        .table-bordered th, .table-bordered td {
            border: 0.5px solid #ccc !important;
        }

    table.dataTable.dtr-inline.collapsed > tbody > tr > td.dtr-control::before {
        background-color: #f06529 !important;
        color: white !important;
        border-radius: 50% !important;
        width: 18px !important;
        height: 18px !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        font-weight: bold !important;
    }

    table.dataTable.dtr-inline.collapsed > tbody > tr.parent > td.dtr-control::before {
        background-color: #d9531e !important;
        color: black !important;
    }
</style>
