@model Inventario360.Web.Models.Empleado

@{
    ViewBag.Title = "Eliminar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Eliminar Empleado</h2>

    @using (Html.BeginForm("Eliminar", "Empleados", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ID)

        <p>¿Estás seguro que deseas eliminar este empleado?</p>

        <dl class="row">
            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Cargo</dt>
            <dd class="col-sm-10">@Model.Cargo</dd>
        </dl>

        <button type="submit" class="btn btn-orange">Eliminar</button>
        <a href="@Url.Action("Index", "Empleados")" class="btn btn-secondary ms-2">Cancelar</a>
    }
</div>
