@model Inventario360.Web.Models.ViewModels.EmpleadoConFichaViewModel

@{
    ViewBag.Title = "Editar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">✏️ Editar Empleado y Ficha</h2>

    @using (Html.BeginForm("Editar", "Empleados", FormMethod.Post, new { @class = "card p-4 shadow" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            @Html.LabelFor(m => m.Nombre, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Cargo, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Cargo, new { @class = "form-control", required = "required" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.FechaIngreso, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.FechaIngreso, new { @class = "form-control", type = "date", required = "required" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.FechaTerminoContrato, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.FechaTerminoContrato, new { @class = "form-control", type = "date" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.FechaVencimientoExamen, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.FechaVencimientoExamen, new { @class = "form-control", type = "date" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.CursoAltura, new { @class = "form-label" })
            @Html.DropDownListFor(m => m.CursoAltura, new List<SelectListItem> {
                new SelectListItem { Text = "Sí", Value = "true", Selected = Model.CursoAltura },
                new SelectListItem { Text = "No", Value = "false", Selected = !Model.CursoAltura }
            }, new { @class = "form-select" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Acreditaciones, new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Acreditaciones, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-orange">Actualizar</button>
        <a href="@Url.Action("Index", "Empleados")" class="btn btn-secondary">Volver</a>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
