@model Inventario360.Web.Models.Proyecto

@{
    ViewBag.Title = "Editar Proyecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Proyecto</h2>

    @using (Html.BeginForm("Editar", "Proyectos", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.ID)

        <div class="mb-3">
            @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Descripcion, htmlAttributes: new { @class = "form-label" })
            @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-orange">Guardar Cambios</button>
        <a href="@Url.Action("Index", "Proyectos")" class="btn btn-secondary ms-2">Cancelar</a>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaProyectos').DataTable({
                language: {
                    search: "Buscar:",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    info: "Mostrando _START_ a _END_ de _TOTAL_ proyectos",
                    paginate: {
                        next: "Siguiente",
                        previous: "Anterior"
                    }
                }
            });
        });
    </script>
}

<style>
    .table-responsive {
        overflow-x: auto;
    }

    .pagination-separated .paginate_button {
        margin: 0 8px;
    }

    .table-hover tbody tr:hover {
        background-color: #fcd8b7;
    }

    .fila-hover:hover {
        background-color: #fbdfc5;
    }

    .mb-4 {
        margin-bottom: 3rem !important;
    }

    .table-light th {
        background-color: #f8f9fa;
        font-weight: bold;
        text-align: center;
    }

    .table td {
        vertical-align: middle;
    }

    .dataTables_wrapper .dataTables_filter {
        margin-bottom: 15px;
    }

    .table-bordered {
        border: 1px solid #333 !important;
    }

        .table-bordered th, .table-bordered td {
            border: 0.5px solid #ccc !important;
        }

    table.dataTable.dtr-inline.collapsed > tbody > tr > td.dtr-control::before {
        background-color: #f06529 !important;
        color: white !important;
        border-radius: 50% !important;
        width: 18px !important;
        height: 18px !important;
        display: flex !important;
        align-items: center !important;
        justify-content: center !important;
        font-weight: bold !important;
    }

    table.dataTable.dtr-inline.collapsed > tbody > tr.parent > td.dtr-control::before {
        background-color: #d9531e !important;
        color: black !important;
    }
</style>
