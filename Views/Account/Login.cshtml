@using Inventario360.Web.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="login-wrapper">
    <div class="login-container">
        <h2>@ViewBag.Title</h2>
        <hr />
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h5 class="text-center text-muted mb-4">Utilice una cuenta local para iniciar sesión</h5>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="d-flex flex-column align-items-center">
                    <div class="mb-3 w-300" style="max-width: 400px;">
                        @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label w-100" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3 w-300" style="max-width: 400px;">
                        @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "form-label w-100" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-check mb-3">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                    @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-secondary">Iniciar sesión</button>
                </div>

                <div class="mt-3 text-center">
                    @Html.ActionLink("Registrarse como usuario nuevo", "Register")
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    body {
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
    }

    .login-wrapper {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 30px;
        padding-bottom: 30px;
    }


    .login-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        max-width: 460px;
        width: 100%;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
    }

        .login-container h2 {
            text-align: center;
            color: #343a40;
            font-weight: bold;
        }

    .form-label {
        font-weight: bold;
        color: #343a40;
        display: block;
        width: 150%;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        display: block;
    }

    .btn-orange {
        background-color: #f06529;
        color: #fff;
        border: none;
    }

        .btn-orange:hover {
            background-color: #d35400;
        }

    a {
        color: #f06529;
    }

    .form-check-label {
        color: #343a40;
    }

    .form-check-input {
        margin-right: 5px;
    }

    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    .form-label w-100 {
        background-color: #fff;
        padding: 30px;
        border-radius: 10px;
        max-width: 460px;
        width: 100%;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
    }



</style>
