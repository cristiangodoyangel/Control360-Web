@model Inventario360.Web.Models.FichaEmpleado

@{
    ViewBag.Title = "Editar Ficha de Empleado";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">✏️ Editar Ficha de Empleado</h2>

    @using (Html.BeginForm("Editar", "FichaEmpleado", FormMethod.Post, new { @class = "card p-4 shadow" }))
    {
        @Html.HiddenFor(model => model.ID)

        <div class="mb-3">
            <label class="form-label">Empleado</label>
            @Html.TextBox("Empleado.Nombre", Model.Empleado?.Nombre, new { @class = "form-control", required = "required" })
            @Html.ValidationMessage("Empleado.Nombre", "", new { @class = "text-danger" })
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Ingreso</label>
            @Html.TextBoxFor(model => model.FechaIngreso, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Término de Contrato</label>
            @Html.TextBoxFor(model => model.FechaTerminoContrato, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="mb-3">
            <label class="form-label">Fecha de Vencimiento de Examen</label>
            @Html.TextBoxFor(model => model.FechaVencimientoExamen, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="mb-3">
            <label class="form-label">Curso Altura</label>
            @Html.DropDownListFor(model => model.CursoAltura, new List<SelectListItem> {
                new SelectListItem { Text = "Sí", Value = "true", Selected = Model.CursoAltura },
                new SelectListItem { Text = "No", Value = "false", Selected = !Model.CursoAltura }
            }, new { @class = "form-control" })
        </div>

        <div class="mb-3">
            <label class="form-label">Acreditaciones</label>
            @Html.TextBoxFor(model => model.Acreditaciones, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-orange">Actualizar</button>
        <a href="@Url.Action("Index", "FichaEmpleado")" class="btn btn-secondary">Cancelar</a>
    }
</div>
